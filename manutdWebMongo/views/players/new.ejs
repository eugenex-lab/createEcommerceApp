<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>New Player</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link   rel="stylesheet" href="addon/app.css" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/tom-select@2.0.0-rc.4/dist/css/tom-select.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.0.0-rc.4/dist/js/tom-select.complete.min.js"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">

    <link href="/app.css" rel="stylesheet" type="text/css">




</head>

<body>






    <div class="container-fluid-md">
        <h1>Add A New Player</h1>
        <br>
        <div class="row">

            <div class="col-md-6">
                <form action="/players" method="POST">



                    <div class="form-group">
                        <label for="name">Player Name</label>
                        <select  class="js-example-responsive" id="name" style="width:100%  " name="name"  required>
                            <option value="">Select Player</option>
                            <% for (let selection of unitedSquad) { %>
                               <option value="<%=selection%>"><%=selection%></option>
                            <% } %>

                        </select>
                    </div>

                    <script>
                        new TomSelect("#name",{
                            create: false,
                            sortField: {
                                field: "text",
                                direction: "asc"
                            }
                        });

                    </script>


                    <div class="form-group">
                        <label for="fanName">Fan Name</label>
                        <input type="text" class="form-control" required id="fanName" name="fanName" placeholder="Enter Fan Name">
                    </div>
                    <div class="form-group">
                        <label for="country">Country</label>
                        <input type="text" class="form-control" required id="country" name="country" placeholder="Enter Player Country">
                    </div>

                    <div class="form-group">
                        <label for="position">Position</label>
                        <select class="form-control" id="position" required name="position">
                            <option value="">Select Preferred Player Position</option>
                            <option value="Goal Keeper">Goal Keeper</option>
                            <option value="Center Back">Center Back</option>
                            <option value="Left Back">Left Back</option>
                            <option value="Right Back">Right Back</option>
                            <option value="Central Midfield">Central Midfield</option>
                            <option value="Attacking Midfield">Attacking Midfield</option>
                            <option value="Center Forward">Center Forward</option>
                            <option value="Left Forward">Left Forward</option>
                            <option value="Right Forward">Right Forward</option>
                        </select>


                    </div>
                    <div class="form-group">
                        <label for="averageRatings">Average Ratings 2021/2022 Season</label>
                        <input type="number" required class="form-control" id="averageRatings" name="averageRatings" value="averageRatings" placeholder="Enter Average Ratings " MIN="0"  max="100" >
                    </div>

                    <div class="form-group">
                        <label for="teamStatus">Player Status</label>
                        <select class="form-control" required id="teamStatus" name="teamStatus">
                            <% for (let selection of teamStatus) { %>
                            <option value="<%=selection%>"><%=selection%></option>
                            <% } %>
                        </select>
                    </div>


                    <div class="form-group">
                        <label for="fanDecision">Fan Status</label>
                        <select class="form-control" id="fanDecision"  required name="fanDecision">
                            <% for (let selection of fanDecision) { %>
                            <option value="<%=selection%>"><%=selection%></option>
                            <% } %>

                        </select>
                    </div>


                    <div class="form-group">
                        <label for="nominateFanCategory">Nominated Category</label>
                        <select class="form-control" id="nominateFanCategory" required name="nominateFanCategory">
                            <% for (let selection of nominateFanCategory) { %>
                            <option value="<%=selection%>"><%=selection%></option>
                            <% } %>

                        </select>
                    </div>

                    <div class="form-group">
                        <label for="fanPerformanceMeter">Fan Performance</label>
                        <input type="range" class="form-control" id="fanPerformanceMeter" required name="fanPerformanceMeter"  min="0" max="100">
                    </div>

                        <button style="float: right;" type="submit" class="btn btn-primary" id="btn">Submit</button>

                </form>
                <a href="/players" class="btn btn-danger">Cancel</a>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</body>


<script>
    <script>
        $(document).ready(function() {
        $('.js-example-basic-multiple').select2()
        });


        $(document).ready(function () {
        $("#select_page").hide()
        });
        console.log("select_page hidden")
    }

</script>
</html>